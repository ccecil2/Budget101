<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExpenseGUI">

    <TextView
        android:id="@+id/textExpTitle"
        android:layout_width="212dp"
        android:layout_height="65dp"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="50dp"
        android:text="Expense"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCategoryName"
        android:layout_width="133dp"
        android:layout_height="32dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="85dp"
        android:text="Category Name:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textExpTitle" />

    <TextView
        android:id="@+id/textNote2"
        android:layout_width="183dp"
        android:layout_height="33dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="49dp"
        android:text="Leave a reminder note:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCategoryName" />

    <EditText
        android:id="@+id/note_text"
        android:layout_width="334dp"
        android:layout_height="53dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="148dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNote2" />

    <Button
        android:id="@+id/buttonsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="13dp"
        android:onClick="saveExpense"
        android:text="SAVE"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_text" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="179dp"
        android:layout_height="26dp"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="82dp"
        app:layout_constraintStart_toEndOf="@+id/textCategoryName"
        app:layout_constraintTop_toBottomOf="@+id/textExpTitle" />

    <EditText
        android:id="@+id/amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textAmount2"
        app:layout_constraintTop_toBottomOf="@+id/note_text" />

    <EditText
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="date"
        android:text="MM/DD/YYYY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount_text" />

    <TextView
        android:id="@+id/textDate2"
        android:layout_width="100dp"
        android:layout_height="41dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="34dp"
        android:text="Date"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAmount2" />

    <TextView
        android:id="@+id/textAmount2"
        android:layout_width="102dp"
        android:layout_height="40dp"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="28dp"
        android:text="Amount($)"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/textDate2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_text" />

</androidx.constraintlayout.widget.ConstraintLayout>